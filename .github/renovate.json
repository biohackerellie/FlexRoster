{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "autoApprove": true,
  "schedule": ["after 10pm and before 5am every day"],

  "packageRules": [
    {
      "matchPackagePatterns": ["^@local/", "babel-plugin-react-compiler"],
      "enabled": false
    }
  ],
  "updateInternalDeps": true,
  "rangeStrategy": "bump",
  "automerge": true
}
