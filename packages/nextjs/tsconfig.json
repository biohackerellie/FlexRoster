{
	"extends": "@student_scheduler/typescript/base.json",
  "compilerOptions": {
		
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ]
    },
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
  },
	
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "tailwind.config.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
