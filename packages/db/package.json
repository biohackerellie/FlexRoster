{
  "name": "@local/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules dist",
    "push": "pnpm with-env drizzle-kit push:pg --config src/drizzle.config.ts",
    "studio": "pnpm with-env drizzle-kit studio    --config src/drizzle.config.ts",
    "gen": "pnpm drizzle-kit generate:pg --config src/drizzle.config.ts",
    "migrate": "pnpm with-env tsx src/migrate.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.9.2",
    "@auth/core": "^0.30.0",
    "drizzle-orm": "^0.30.8",
    "postgres": "^3.4.4",
    "zod": "^3.22.5"
  },
  "devDependencies": {
    "@local/eslint-config": "workspace:*",
    "@local/prettier-config": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.15",
    "eslint": "^9.0.0",
    "pg": "^8.11.5",
    "prettier": "^3.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "prettier": "@local/prettier-config"
}
