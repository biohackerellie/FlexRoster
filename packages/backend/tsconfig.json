{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"esNext"
		],
		"allowImportingTsExtensions": true,
		"allowJs": true,
    "skipLibCheck": true,
		"moduleDetection": "force",
		"composite": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
		"downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
		"types": ["bun-types"],
    "incremental": true,
		"baseUrl": "./",
	},
	"include": [
		"**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}