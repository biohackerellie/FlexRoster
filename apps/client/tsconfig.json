{
	"extends": "@local/tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"~/*": [
				"../server/src/*"
			]
		},
    "plugins": [
      {
        "name": "next"
      }
    ],
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
	},
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
