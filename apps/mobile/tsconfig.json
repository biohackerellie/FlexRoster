{
  "extends": ["@local/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["nativewind/types"],
    "checkJs": false
  },
  "include": ["src", "*.ts", "*.js"],
  "exclude": ["node_modules"]
}
