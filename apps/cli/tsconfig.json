{
  "extends": "@local/tsconfig/base.json",
  "include": [
    ".eslintrc.cjs",
    "src",
    "tsup.config.ts",
    "../reset.d.ts",
    "prettier.config.mjs"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "baseUrl": "./",
    "checkJs": true,
    /* EMIT RULES */
    "outDir": "./dist",
    "noEmit": true, // TSUP takes care of emitting js for us, in a MUCH faster way
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true
  }
}
