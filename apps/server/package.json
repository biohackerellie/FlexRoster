{
  "name": "@local/server",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun --env-file=../../.env run --watch src/index.ts",
    "clean": "rm -rf .turbo node_modules dist",
    "clean:outs": "rm -rf dist",
    "start": "bun run dist/index.js",
    "lint": "bun --bun eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "build": "tsc",
    "build:local": "bun --env-file=../../.env build ./src/index.ts --outdir ./dist --target bun",
    "build:bun": "/root/.bun/bin/bun build ./src/index.ts --outdir ./dist --target bun",
    "nightly": "bun --env-file=../../.env run ./src/scripts/nightly.ts",
    "cache:reset": "bun --env-file=../../.env run ./src/scripts/nightly/redisInit.ts && bun --env-file=../../.env run ./src/scripts/nightly/cacheRosters.ts",
    "with-env": "bun --env-file=../../.env --"
  },
  "dependencies": {
    "@auth/core": "^0.30.0",
    "@auth/drizzle-adapter": "^1.0.1",
    "@azure/identity": "^4.2.0",
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/jwt": "^1.0.2",
    "@elysiajs/swagger": "^1.0.5",
    "@local/db": "workspace:*",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@sinclair/typebox": "^0.32.29",
    "@t3-oss/env-core": "^0.10.1",
    "elysia": "^1.0.16",
    "ioredis": "^5.4.1",
    "lucia": "^3.2.0",
    "nanoid": "^5.0.7",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@local/eslint-config": "workspace:*",
    "@local/prettier-config": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@local/validators": "workspace:*",
    "@types/node": "^20.12.10",
    "bun-types": "^1.1.7",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "prettier": "@local/prettier-config"
}
