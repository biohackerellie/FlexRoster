{
  "name": "server",
  "private": true,
  "main": "./src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun --env-file=../../.env run --watch src/index.ts",
    "clean": "rm -rf .turbo node_modules",
    "start": "bun run dist/index.js",
    "lint": "bun --bun eslint --ext .ts src",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "nightly": "bun --env-file=../../.env run ./src/scripts/nightly.ts",
    "with-env": "bun --env-file=../../.env --"
  },
  "dependencies": {
    "@auth/core": "^0.28.0",
    "@auth/drizzle-adapter": "^0.8.0",
    "@azure/identity": "^4.0.1",
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/jwt": "^1.0.2",
    "@elysiajs/swagger": "^1.0.2",
    "@local/auth": "workspace:*",
    "@local/db": "workspace:*",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@sinclair/typebox": "^0.32.15",
    "@t3-oss/env-core": "^0.9.2",
    "elysia": "latest",
    "ioredis": "^5.3.2",
    "lucia": "^3.1.1",
    "nanoid": "^5.0.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@local/eslint-config": "workspace:*",
    "@local/prettier-config": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@local/validators": "workspace:*",
    "@types/node": "^20.11.28",
    "bun-types": "^1.0.33",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@local/eslint-config/base"
    ]
  },
  "prettier": "@local/prettier-config"
}
