{
  "extends": "@local/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noUncheckedIndexedAccess": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "checkJs": false,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "bun-types" // add Bun global
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": ["."],
  "exclude": ["node_modules", "dist/**", "tests", "scr/scripts/**", "scripts"]
}
