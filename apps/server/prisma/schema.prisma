generator client {
  provider = "prisma-client-js"
	output   = "../src/generated/client"
	binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




enum Role {
  admin
  student
  teacher
  secretary
}

model classrooms {
  id           String         @id
  roomNumber   String
  teacherName  String
	available    Boolean				@default(true)
  classRosters classRosters[]

}

model classRosters {
  id           Int        @id @default(autoincrement())
  studentEmail String
  classroomId  String
  classroom    classrooms @relation(fields: [classroomId], references: [id], onDelete: Cascade)
}

model transferLogs {
	id					 Int        @id @default(autoincrement())
	studentEmail String
	teacherName  String
	roomNumber	 String
	createdAt		DateTime   @default(now())
	
}


