{
	"name": "STEAM-workspace",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
	  "clean": "rm -rf .turbo node_modules bun.lockb"
  },
	"devDependencies": {
		"turbo": "^1.12.3"
	},
	"packageManager": "pnpm@8.15.0"
}